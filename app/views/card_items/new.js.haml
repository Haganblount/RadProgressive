:plain
  var panel = "#{escape_javascript(render('new'))}"
  
  if($(window).width() < 400) {
    $('body').removeClass()
    $('body').addClass('card_items')
    $('.panel').html(panel)
  } else {
    $(".panel").transition(window.transitionParams, function() {
      $('body').removeClass()
      $('body').addClass('card_items')
      $('.panel').html(panel)
      $('.panel').css({ rotate: '0deg', x: '0px' })
    }); 
  }