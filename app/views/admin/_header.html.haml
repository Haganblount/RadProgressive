      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#example-nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
